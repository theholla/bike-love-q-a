{{#if provideAnswer}}
    <div class="form">
      <form>
        <div class="form-group">
          <label for="text"><div class="formemphasis">your answer: </div></label><br>
          {{textarea value=text id="text" cols="60" rows="3"}}
        </div>

        <div class="form-group">
          <label for="name"><div class="formq">name: </div></label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="email"><div class="formq">email: </div></label>
          {{input value=email id="email"}}
        </div>

        <div class="button pointer" {{action 'saveAnswer'}}>Go</div>
      </form>
    </div>
{{else}}
  <div class="button pointer" {{action 'provideAnswerForm'}}>answer</div>
{{/if}}
