{{#if updateQuestionForm}}
  <h1>Update Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="summary">Quick summary</label>
        {{input value=summary id="summary"}}
      </div>

      <div class="form-group">
        <label for="q">Your question</label>
        {{textarea value=q id="q" cols="60" rows="10"}}
      </div>

      <div class="form-group">
        <label for="user">name</label>
        {{input value=user id="user"}}
      </div>

      <div class="form-group">
        <label for="tags">tags</label>
        {{input value=tags id="tags"}}
      </div>

      <button class="btn btn-default" {{action 'update' model}}>update</button>
    </form>

    <button class="btn btn-default" {{action 'deleteQuestion' model}}>delete</button>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateQuestionForm'}}><span class="glyphicon glyphicon-wrench"></span></button>
{{/if}}
