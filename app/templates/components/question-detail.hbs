<div class="row">
  <h1>{{question.summary}}</h1>
  <h5>{{question.user}} - {{format-date question.date}}</h5>
</div>

<div class="row">
  <p>{{question.q}}</p>
</div>

<div class="row">
  <h5>Tags: {{question.tags}}</h5>
</div>

<ul>
  {{#each question.answers as |answer|}}
    <li>Answer: {{answer.text}}<p>Name: {{answer.name}} - Email: {{answer.email}}</p>
    <button {{action 'deleteAnswer' answer}}><span class="glyphicon glyphicon-trash"></span></button></li>
  {{/each}}
</ul>

{{provide-answer saveAnswer="saveAnswer" question=question}}
