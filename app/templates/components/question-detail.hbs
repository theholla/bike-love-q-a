<div class="row emphasis">Q: {{question.summary}}</div>

<div class="row">
  <h5>asked by {{question.user}} - {{format-date question.date}}</h5>
</div>

<div class="row">
  <p>{{question.q}}</p>
</div>

<div class="row">
  <h5>Tags: {{question.tags}}</h5>
</div>

<div class="row">{{provide-answer saveAnswer="saveAnswer" question=question}}</div>

<div class="row">
  <ul>
    {{#each question.answers as |answer|}}
      <span class="minoremphasis">A: by {{answer.name}} - email: {{answer.email}}</span>
      <li class="answer">{{answer.text}}</li>
      <div class="pointer right icon" {{action 'deleteAnswer' answer}}>
        <span class="glyphicon glyphicon-trash"></span></div>
    {{/each}}
  </ul>
</div>
